<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AddCart</servlet-name>
        <servlet-class>servlets.AddCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteItem</servlet-name>
        <servlet-class>servlets.DeleteItem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCart</servlet-name>
        <url-pattern>/agregarproducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteItem</servlet-name>
        <url-pattern>/borraritem</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>indexSS.jsp</welcome-file>
    </welcome-file-list>
    <jsp-config>
        <jsp-property-group>
            <description>header and footer settings</description>
            <url-pattern>/servicios.jsp</url-pattern>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/carrito.jsp</url-pattern>
            <url-pattern>/shop.jsp</url-pattern>
            <url-pattern>/sucursal.jsp</url-pattern>
            <url-pattern>/WEB-INF/view/*</url-pattern>
            <url-pattern>/product-details.jsp</url-pattern>
            <url-pattern>/cart.jsp</url-pattern>
            <url-pattern>/contacto.jsp</url-pattern>
            <url-pattern>/productos.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
        <jsp-property-group>
            <description>header and footer setting with no session open</description>
            <display-name>HeaderFooterSINSESION</display-name>
            <url-pattern>/Login.jsp</url-pattern>
            <url-pattern>/contactoSS.jsp</url-pattern>
            <url-pattern>/login.jsp</url-pattern>
            <url-pattern>/registrarUsuario.jsp</url-pattern>
            <url-pattern>/productosSS.jsp</url-pattern>
            <url-pattern>/sucursalSS.jsp</url-pattern>
            <url-pattern>/indexSS.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/headerSS.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
        <jsp-property-group>
            <display-name>HeaderFooterADMIN</display-name>
            <url-pattern>/indexAdmin.jsp</url-pattern>
            <url-pattern>/Sistema.jsp</url-pattern>
            <url-pattern>/registrarAdministrador.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/headerAdmin.jspf</include-prelude>
        </jsp-property-group>
    </jsp-config>
</web-app>
